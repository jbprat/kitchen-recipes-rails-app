<header class="navbar navbar-fixed-top navbar-inverse">
  <div class="container">
    <nav class="headerMenu-nav">
      <%= link_to image_tag('logo.png', alt: 'my recipe logo', height: 70), root_path %>

      <ul class="nav navbar-nav navbar-right headerMenu-nav-list">
        <li class="headerMenu-nav-list
        -element"><%= link_to t('.add_recipe'), new_recipe_path %></li>
        <li class="headerMenu-nav-list
        -element"><%= link_to t('.home'), root_path %></li>
        <% if logged_in? %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <%= t('.account') %> <b class="caret"></b>
            </a>
            <ul class="dropdown-menu">
              <li><%= link_to t('.profile'), current_user %></li>
              <li class="divider"></li>
              <li>
                <%= link_to t('.logout'), logout_path, method: "delete" %>
              </li>
            </ul>
          </li>
        <% else %>
          <li class="headerMenu-nav-list
          -element"><%= link_to t('.signup'), signup_path %></li>
          <li class="headerMenu-nav-list
          -element"><%= link_to t('.login'), login_path %></li>
        <% end %>
      </ul>
    </nav>
  </div>
</header>